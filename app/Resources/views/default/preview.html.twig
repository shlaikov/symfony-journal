{% extends 'base.html.twig' %}

{% block title %}Journal{% endblock %}
{% block navigation %}
    <nav>
        <ul>
            <li><a href="{{ path('homepage') }}">Назад</a></li>
        </ul>
    </nav>
    <hr>
{% endblock %}
{% block body %}
    <div>
        <h3>{{ news.title }}</h3>
    </div>
    <article>
        <div>
            <p>
                {{ news.body }}
            </p>
        </div>
        <div>
            {{ news.created_time|date("Y:m:d H:m") }}
        </div>
    </article>
    <nav>
    <a href="{{ path('app_default_edit', {'alias' : news.alias}) }}">Редактировать статью</a>
    </nav>
{% endblock %}